\renewcommand\contentsname{Table of Contents}

\def\advisor#1{\gdef\@advisor{#1}}
\def\@advisor{\@latex@warning@no@line{No \noexpand\advisor given}}

% 封面页
\def\cover{
    \thispagestyle{empty}% 不要页眉页尾
    \null \vskip 1 in
	\begin{center}
	{\scshape \LARGE City University of Hong Kong}
	\par \vspace{0.5cm}
	{\scshape \large Department of Computer Science}
	\par \vspace{1.5cm}
	{\scshape \Large Annual Report}
	\par \vspace{2cm}
	{\huge \slshape \bfseries \@title}
	\par \vspace{2cm}
	{\Large\itshape \@author}
	\par \vspace{3cm}
	{\large \itshape Supervised by}
	\par
	{\large \itshape Prof.~\@advisor}
	\par \vspace{4cm}
	{\large \slshape \@date}
	\end{center}
    \clearpage
}

% 空白页
\def\seppageblank{
    \thispagestyle{empty}
    \centering
    \textbf{\quad}
    \clearpage
}

\renewenvironment{abstract}{
    \addcontentsline{toc}{section}{Abstract}
    \null \vskip 1 in
    \begin{center}%
        {\Large \bfseries \abstractname \vspace{0.5cm}}%
    \end{center}%
    \quotation
    }
{\endquotation \clearpage \pagenumbering{arabic}}

\def\beforemain{
    \cover
